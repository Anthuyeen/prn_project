@using prn_project_2.Models;
@using System.Globalization;
@{
    ActivityDetail activity = (ActivityDetail)ViewBag.Activitiy;
    Subject subject = (Subject)ViewBag.Subject;
    List<Teacher> teacher = (List<Teacher>)ViewBag.Teachers;
}
<!doctype html>
<html  style="font-family: sans-serif;">
<head>
    <title>FPT University Academic Portal</title>
</head>
<body>
    <div style="max-width: 70vw; margin-left: auto; margin-right: auto;">
        <div class="col-md-8">

            <h1>
                <span>FPT University Academic Portal</span>
            </h1>
        </div>
        <ol class="breadcrumb" style=" padding: 8px 15px; margin-bottom: 20px; list-style: none; background-color: #f5f5f5; border-radius: 4px;">
            <li>
                <span id="ctl00_lblNavigation">&nbsp;<b>User detail</b></span>
            </li>
        </ol>
        <h2 style="margin: 10vh">
            Activity detail
        </h2>
        <table style="width: 100%;">
            <tr>
                <td style="border-bottom: 1px solid #f0f0f0;">Date:</td>
                <td style="border-bottom: 1px solid #f0f0f0;">@activity.Time.DayOfWeek @activity.Time.Date.ToString("dd/MM/yyyy") </td>
            </tr>
            <tr>
                <td style="border-bottom: 1px solid #f0f0f0;">Slot:</td>
                <td style="border-bottom: 1px solid #f0f0f0;">@activity.Slot </td>
            </tr>
            <tr>
                <td style="border-bottom: 1px solid #f0f0f0;">Student group:</td>
                <td style="border-bottom: 1px solid #f0f0f0;">@activity.StudentGroup </td>
            </tr>
            <tr>
                <td style="border-bottom: 1px solid #f0f0f0;">Instructor:</td>
                @*<td style ="border-bottom: 1px solid #f0f0f0;">@activity.TeacherId</td>*@
                <td style="border-bottom: 1px solid #f0f0f0;">@Html.ActionLink(activity.TeacherId, "ins", "Default")</td>
            </tr>
            <tr>
                <td style="border-bottom: 1px solid #f0f0f0;">Course:</td>
                <td style="border-bottom: 1px solid #f0f0f0;">@subject.SubjectName (@activity.SubjectId) </td>
            </tr>
            <tr>
                <td style="border-bottom: 1px solid #f0f0f0;">Course session number:</td>
                <td style="border-bottom: 1px solid #f0f0f0;">@activity.CourseSessionNumber </td>
            </tr>
            <tr>
                <td style="border-bottom: 1px solid #f0f0f0;">Course session type:</td>
                <td style="border-bottom: 1px solid #f0f0f0;"> </td>
            </tr>
            <tr>
                <td style="border-bottom: 1px solid #f0f0f0;">Course session description:</td>
                <td style="border-bottom: 1px solid #f0f0f0;"> </td>
            </tr>
            <tr>
                <td style="border-bottom: 1px solid #f0f0f0;">Campus/Programme:</td>
                <td style="border-bottom: 1px solid #f0f0f0;">@activity.Campus </td>
            </tr>
            <tr>
                <td style="border-bottom: 1px solid #f0f0f0;">Booker:</td>
                <td style="border-bottom: 1px solid #f0f0f0;">@activity.Booker </td>
            </tr>
            <tr>
                <td style="border-bottom: 1px solid #f0f0f0;">Record time:</td>
                <td style="border-bottom: 1px solid #f0f0f0;">@activity.recordTime</td>
            </tr>
        </table>
        <tr style="border-bottom: 0 none">
            <td>
                <br />
                <table width="100%" style="border: 1px solid transparent;" id="cssTable">
                    <tr>
                        <td>
                            <div id="ctl00_divSupport">
                                <br />
                                <b>Mọi góp ý, thắc mắc xin liên hệ: </b><span style="color: rgb(34, 34, 34); font-family: arial, sans-serif; font-size: 13.333333969116211px; font-style: normal; font-variant: normal; font-weight: normal; letter-spacing: normal; line-height: normal; orphans: auto; text-align: start; text-indent: 0px; text-transform: none; white-space: normal; widows: auto; word-spacing: 0px; -webkit-text-stroke-width: 0px; background-color: rgb(255, 255, 255); display: inline !important; float: none;">Phòng dịch vụ sinh viên</span>: Email: <a href="mailto:dichvusinhvien@fe.edu.vn">dichvusinhvien@fe.edu.vn</a>.
